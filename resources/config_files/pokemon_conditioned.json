{
  "num_epochs": 100,

  "pipeline": {
    "type": "stable diffusion"
  },

  "learner": {
    "type": "stable diffusion",

    "components": {
      "type": "lora diffusion",
      "pipeline_path": "runwayml/stable-diffusion-v1-5",

      "loader": {
        "type": "prompt",
        "num_data": 5000,

        "data_loader": {
          "batch_size": 8
        },

        "dataset": {
          "lazy_loading": false,
          "img_size": 512,

          "tokenizer": {
            "pipeline_path": "runwayml/stable-diffusion-v1-5"
          }
        }
      },

      "optimizer": {
        "lr": 1e-4,
        "lr_warmup_steps": 500
      },

      "model": {
        "type": "conditioned unet",
        "load": false,

        "args": {
          "sample_size": 64,
          "in_channels": 4,
          "out_channels": 4,

          "layers_per_block": 2,
          "block_out_channels": [64, 64, 128, 128],
          "cross_attention_dim": 768,
          "attention_head_dim": 14
        }
      },

      "noise_scheduler": {
        "type": "ddpm",
        "load": false,

        "args": {
          "num_train_timesteps": 1000
        }
      }
    }
  }
}
{
  "training_type": "stable",
  "num_epochs": 100,

  "loader": {
    "loading_type": "prompt",
    "num_data": 80,

    "data_loader": {
      "batch_size": 8
    },

    "dataset": {
      "lazy_loading": true,
      "img_size": 512,

      "tokenizer": {
        "pipeline_path": "CompVis/stable-diffusion-v1-4"
      }
    }
  },

  "learner": {
    "learning_type": "conditioned",
    "reduce_dimensions": true,

    "components": {
      "lr": 1e-4,
      "lr_warmup_steps": 500,

      "model": {
        "model_type": "conditioned",
        "pipeline_path": "",

        "args": {
          "sample_size": 64,
          "in_channels": 4,
          "out_channels": 4,

          "layers_per_block": 2,
          "block_out_channels": [64, 64, 128, 128]
        }
      },

      "noise_scheduler": {
        "noise_scheduler_type": "ddpm",
        "pipeline_path": "",

        "args": {
          "num_train_timesteps": 1000
        }
      },

      "vae": {
        "pipeline_path": "CompVis/stable-diffusion-v1-4"
      },

      "text_encoder": {
        "pipeline_path": "CompVis/stable-diffusion-v1-4"
      }
    }
  }
}
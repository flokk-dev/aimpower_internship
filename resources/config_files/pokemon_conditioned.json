{
  "num_epochs": 100,

  "pipeline": {
    "type": "stable diffusion"
  },

  "learner": {
    "type": "stable diffusion",

    "components": {
      "type": "lora diffusion",
      "pipeline_path": "runwayml/stable-diffusion-v1-5",
      "validation_prompts": [
        "a blue bird with horns"
      ],

      "loader": {
        "type": "prompt",
        "num_data": 100,

        "data_loader": {
          "batch_size": 1
        },

        "dataset": {
          "lazy_loading": false,
          "img_size": 512,

          "tokenizer": {
            "pipeline_path": "runwayml/stable-diffusion-v1-5"
          }
        }
      },

      "optimizer": {
        "lr": 1e-4,
        "lr_warmup_steps": 500
      },

      "model": {
        "type": "conditioned unet",
        "load": true
      },

      "noise_scheduler": {
        "type": "ddpm",
        "load": true
      }
    }
  }
}
{
  "training_type": "basic",
  "num_epochs": 100,

  "loader": {
    "loading_type": "label",
    "num_data": 5000,

    "data_loader": {
      "batch_size": 64
    },

    "dataset": {
      "lazy_loading": false,
      "img_size": 32
    }
  },

  "learner": {
    "learning_type": "guided",
    "reduce_dimensions": false,

    "components": {
      "lr": 1e-4,
      "lr_warmup_steps": 500,

      "model": {
        "model_type": "guided",
        "pipeline_path": "",

        "args": {
          "sample_size": 32,
          "in_channels": 1,
          "out_channels": 1,

          "layers_per_block": 2,
          "block_out_channels": [64, 64, 128, 128],

          "num_class_embeds": 10
        }
      },

      "noise_scheduler": {
        "noise_scheduler_type": "ddpm",
        "pipeline_path": "",

        "args": {
          "num_train_timesteps": 1000
        }
      },

      "vae": {
        "pipeline_path": ""
      }
    }
  }
}